<p id="notice"><%= notice %></p>

<div style="border: 2px solid pink;width: 400px;height: 400px;margin-top: 100px;margin-left: 100px;">
    <h3 style="margin-left: 150px;">Latest Orders</h3>
    
     <% @orders.each do |order| %>
      <p style='margin:20px'>
        <%= order.order_type  %>  on <%= order.created_at  %>
        <br>
      </p>
    <% end %>

</div>


<div style="border: 2px solid pink;width: 400px;height: 400px;float: right;margin-top: -400px;margin-right: 300px;">
    <h3 style="margin-left: 150px;">Friends Activity</h3>

	<% @user_friends.each do |friend| %>
    	

    	<% friend.orders.each do |order| %>
   
	      <p style='margin:20px'>
	        <%= friend.name %>  has created an order for <%= order.order_type  %> from <%= order.restaurant  %>

	        <br>

	      </p>
     <% end %>
    	<br>

    	
    <% end %>




</div>
