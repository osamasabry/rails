</div>
<!-- Show Groups -->
<div style="border: 4px solid purple;width: 28%;height: 405px;margin-top: 0px;margin-left: 5%;">
<table class="table">
   <tbody>
    <% @groups.each do |group| %>
      <tr>
      <!-- </br> -->
        <td style="font-size:22px"><%= group.name %></td>
        <td><a class="btn btn-info" href="/groups/new?id=<%=group.id%>" >show</a></td>
         <td><a class="btn btn-primary" href="/groups/new?add=<%=group.id%>" >add</a></td>   

        <td ><span class="btn btn-danger"><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' } %></span></td>
      </tr>

    <% end %>
  </tbody>
</table>
</div>
