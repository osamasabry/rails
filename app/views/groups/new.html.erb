<!-- insert users in the group -->
<div style="border: 4px solid purple;width: 56%;height: 400px;float: right;margin-top: -425px;margin-right: 10%;">

<!-- add user to group form -->
<% if @groupnum %>

<%= form_for(:user, :url=>{:controller => 'users',:action =>'rsearch'}) do |f| %>
 

  <div class="field" style="font-size:20px;float:left;margin-left:30%">
    <%= f.label :email %>
    <span style="size:2px" >
    <%= f.text_field :email,:placeholder => "email" %></span>

     <%=f.hidden_field :addid, :value => @groupnum%>
    
  </div>
  <div class="actions" style="margin-top:2%">
    <%= f.submit %>
  </div>
<% end %>



<!-- end of adding user to group -->
<% if flash[:user] %>
  <%= flash[:user] %>
<% else %>
  <%= flash[:notice] %>
<% end %>
<% end %>
