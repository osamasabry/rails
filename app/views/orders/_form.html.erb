<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :type %><br>
    <%= f.text_field :order_type %>
  </div>
  <div class="field">
    <%= f.label :restaurant %><br>
    <%= f.text_field :restaurant %>
  </div>
  <div class="field">
    <%= f.label :menu_image %><br>
    <%= f.text_area :menu_image %>
  </div>
  
  <div class="field">
    <%= f.label :Status %><br>
    <%= @order.status %>
    <% if @order.status == 'finish' %>
    
    <%= f.text_field :status, :value =>'waiting' %>
    <% elsif %>
    <%= f.text_field :status, :value =>'finish' %>
    <% else %>
    <%= f.text_field :status  %>
    <% end %>
    
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>